@model IEnumerable<Category>
@{
    ViewData["Title"] = "Categories";
}
<div class="card">
    <span class="card__title">Categories</span>
    <p class="card__content">
        Add Your Category Here.
    </p>
    <form class="card__form">
        <input required="" type="text" placeholder="Your life" />
        <button asp-controller="categories" asp-action="creat" class="card__button alert-primary "><i class="bi bi-plus"></i>Add</button>
    </form>
</div>